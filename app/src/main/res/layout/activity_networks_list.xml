<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/session_list_layout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    >

    <Button
        android:id="@+id/button_scan_network"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_networks"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:onClick="scanNetwork"/>

    <TextView
        android:id="@+id/scan_wifi_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_choose_network"
        android:layout_below="@id/button_scan_network"
        android:layout_centerHorizontal="true"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scan_wifi_text"
        android:layout_marginTop="14dp"
        android:visibility="visible" />
</RelativeLayout>

